<% @page_title = "Listing Players" %>

<table>
  <tr>
  </tr>

<% @players.each do |player| %>
  <tr class='row<%= cycle(1,2) %>'>
    <td><h2><%= link_to player.signifier, player %></h2></td>
    <td><%= link_to 'Transports', player_transports_path(player) %></td>
    <td><%= link_to 'Peers', player_peers_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

